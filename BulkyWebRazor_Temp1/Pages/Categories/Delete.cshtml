@page
@model BulkyWebRazor_Temp1.Pages.Categories.DeleteModel
 

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="p-3 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger form-control">Delete</button> &nbsp;
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="/Category/Delete"  class="btn btn-outline-primary border form-control">
                    Back To List
                </a>
            </div>

        </div>


    </div>

</form>


